doctype html 
html 
  title PUG
  link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous")
  body(class="container")
    div(class="jumbotron" style="min-height: 100vh; display: flex; flex-direction: column")
      h2(class="mb-4 mt-4") Productos
        if productsExists
          div(class="bg-dark text-light")
            div(class="row border-bottom")  
              div(class="col-4 p-4 fw-bold") Nombre
              div(class="col-4 p-4 fw-bold") Precio
              div(class="col-4 p-4 fw-bold") Foto
              for p in products
                div(class="row border-bottom")
                  div(class="col-4 p-4") #{p.title}
                  div(class="col-4 p-4") #{p.price}
                  div(class="col-4 p-4")
                    img(width="50" src=p.thumbnail alt="not found") 
        else 
          div(class="alert alert-warning fw-bold") No se encontraron productos
        a(href='/')
          button(class="btn btn-success mt-3 mb-5") Volver
                   